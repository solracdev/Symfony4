{# empty Twig template #}
<div class="media text-muted pt-3">
    {# declarar variables en twig y asignarle valor #}
    {# para alicar uan function en twig se usa con el pipe, aqui hacemos un split, pero si usaramos el toUpper, etc seria igual#}
    {% set initials = post.user.fullName | split(' ') %}
    {# para acceder a los elementos de un array podemos utilizar la funcion attribute(array, posicion) o de la manera tradicional array[posicion] #}
    <img data-src="holder.js/32x32?text={{ initials[0] | first }}{{ attribute(initials, 1) | first }}&bg=e83e8c&fg=fff&size=8" alt="" class="mr-2 rounded">
    <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <span class="d-block">
            <a href="{{ path("micro_post_user", {"username": post.user.username}) }}">
                <strong class="text-gray-dark">@{{ post.user.fullName }}</strong>
            </a>
            <small>Â· {{ post.time | date('d/m/Y') }}</small>
        </span>
        <a href="{{ path("micro_post_show", {"id": post.id}) }}">{{ post.text }}</a>
    </p>
</div>